{% extends '::base.html.twig' %}

{% block body -%}
<div class="hero-unit">
    <h3>{{ entity.poblacion }} - {{ entity.tipo ~ ' en ' }} {{ entity.operacion }}</h3>
</div>

<div class="row-fluid">
    <li class="span4">
        <ul class="thumbnails">
            <img data-src="holder.js/360x270" alt="{{ entity.img }}" src="{{ asset('images/inmuebles/' ~ entity.img) }}" style="width: 360px;">
        </ul>
    </li>
    <li class="span6">
        <table>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.ref{% endtrans %}: </th>
                <td>{{ entity.ref }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.zona{% endtrans %}: </th>
                <td>{{ entity.zona }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.superficie{% endtrans %}: </th>
                <td>{{ entity.superficie ~ ' m2' }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.habdoble{% endtrans %}: </th>
                <td>{{ entity.habitacionesdobles }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.habsimple{% endtrans %}: </th>
                <td>{{ entity.habitacionessimples }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.banyos{% endtrans %}: </th>
                <td>{{ entity.banyos }}</td>
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.ascensor{% endtrans %}: </th>
                {% if entity.ascensor == true %}
                    <td>Si</td>
                {% else %}
                    <td>No</td>
                {% endif %}
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.terraza{% endtrans %}: </th>
                {% if entity.terraza == true %}
                <td>{% trans %}si{% endtrans %} - {{ entity.metrosterraza }} m2</td>
                {% else %}
                    <td>{% trans %}no{% endtrans %}  </td>
                {% endif %}
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.jardin{% endtrans %}: </th>
                {% if entity.jardin == true %}
                    <td>{% trans %}si{% endtrans %} - {{ entity.metrosjardin }} m2</td>
                {% else %}
                    <td>{% trans %}no{% endtrans %}  </td>
                {% endif %}
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.parcking{% endtrans %}: </th>
                {% if entity.garaje == true %}
                    <td>{% trans %}si{% endtrans %}</td>
                {% else %}
                    <td>{% trans %}no{% endtrans %}</td>
                {% endif %}
            </tr>
            <tr>
                <th>{% trans from "inmuebles" %}inmu.precio{% endtrans %}: </th>
                <td>{{ entity.precio ~ ' â‚¬' }}</td>
            </tr>
        </table>
    </li>
</div>

<div class="row-fluid">
    <br />
    <strong>{% trans from "inmuebles" %}inmu.desc{% endtrans %}</strong><br />
    <p>
        {{ entity.descripcion }}
    </p>
</div>

<div class="row-fluid">
    <div class="well span12 row">
        <div class="span8">
            <a href="{{ path('inmueble') }}" class="btn btn-info btn-small" role="button">{% trans %}back.list{% endtrans %}</a>
        </div>
        <div class="span2">
            {{ form_end(delete_form) }}
        </div>
        <div class="span2">
            <a href="{{ path('inmueble_edit', { 'id': entity.ref }) }}" class="btn btn-info btn-small" role="button">{% trans %}editar{% endtrans %}</a>
        </div>
    </div>
</div>

{% endblock %}
