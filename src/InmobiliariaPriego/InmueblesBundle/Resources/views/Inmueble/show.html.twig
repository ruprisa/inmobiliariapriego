{% extends '::base.html.twig' %}

{% block body -%}
<div class="hero-unit">
    <h3>{{ entity.poblacion }} - {{ entity.tipo ~ ' en ' }} {{ entity.operacion }}</h3>
</div>

<div class="row-fluid">
    <li class="span4">
        <ul class="thumbnails">
            <img data-src="holder.js/360x270" alt="{{ entity.img }}" src="{{ asset('images/inmuebles/' ~ entity.img) }}" style="width: 360px;">
        </ul>
    </li>
    <li class="span6">
        <table>
            <tr>
                <th>Referencia: </th>
                <td>{{ entity.ref }}</td>
            </tr>
            <tr>
                <th>Zona: </th>
                <td>{{ entity.zona }}</td>
            </tr>
            <tr>
                <th>Superficie: </th>
                <td>{{ entity.superficie ~ ' m2' }}</td>
            </tr>
            <tr>
                <th>Habitaciones dobles: </th>
                <td>{{ entity.habitacionesdobles }}</td>
            </tr>
            <tr>
                <th>Habitaciones individuales: </th>
                <td>{{ entity.habitacionessimples }}</td>
            </tr>
            <tr>
                <th>Ba&ntilde;os: </th>
                <td>{{ entity.banyos }}</td>
            </tr>
            <tr>
                <th>Ascensor: </th>
                {% if entity.ascensor == true %}
                    <td>Si</td>
                {% else %}
                    <td>No</td>
                {% endif %}
            </tr>
            <tr>
                <th>Terraza: </th>
                {% if entity.terraza == true %}
                    <td>Si - {{ entity.metrosterraza }} m2</td>
                {% else %}
                    <td>No  </td>
                {% endif %}
            </tr>
            <tr>
                <th>Jardín: </th>
                {% if entity.jardin == true %}
                    <td>Si - {{ entity.metrosjardin }} m2</td>
                {% else %}
                    <td>No  </td>
                {% endif %}
            </tr>
            <tr>
                <th>Parking: </th>
                {% if entity.garaje == true %}
                    <td>Si</td>
                {% else %}
                    <td>No</td>
                {% endif %}
            </tr>
            <tr>
                <th>Precio: </th>
                <td>{{ entity.precio ~ ' €' }}</td>
            </tr>
        </table>
    </li>
</div>

<div class="row-fluid">
    <br />
    <strong>Descripci&oacute;n del Inmueble</strong><br />
    <p>
        {{ entity.descripcion }}
    </p>
</div>

<div class="row-fluid">
    <div class="well span12 row">
        <div class="span8">
            <a href="{{ path('inmueble') }}" class="btn btn-info btn-small" role="button">Volver a la lista</a>
        </div>
        <div class="span2">
            {{ form_end(delete_form) }}
        </div>
        <div class="span2">
            <a href="{{ path('inmueble_edit', { 'id': entity.ref }) }}" class="btn btn-info btn-small" role="button">Editar</a>
        </div>
    </div>
</div>

{% endblock %}
