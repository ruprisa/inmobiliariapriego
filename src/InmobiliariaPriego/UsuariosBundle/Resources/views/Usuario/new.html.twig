{% extends '::base.html.twig' %}

{% block body -%}
    <div class="hero-unit">
        <h3>Nuevo Usuario</h3>
    </div>

    <div class="row-fluid">
        <div class="span12">
            {{ form_row(form.userid) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ form_row(form.password) }}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            {{ form_row(form.username) }}
        </div>
    </div>

{% if is_granted('ROLE_ADMIN') %}
    <div class="row-fluid">
        <div class="span12">
            <!-- Aquí iría el campo Roles -->
        </div>
    </div>
    <div class="row-fluid">
        <div class="well span12 row">
            <div class="span8">
                <a href="{{ path('usuario') }}" class="btn btn-info btn-small" role="button">Volver a la lista</a>
            </div>
        </div>
    </div>
{% endif %}

{{ form_rest(form) }}

{% endblock %}