{% extends '::base.html.twig' %}

{% block body -%}
    <div class="hero-unit">
        <h3>NUEVO USUARIO</h3>
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row-fluid">
        <div class="span4">
            {{ form_row(form.userid) }}
        </div>
        <div class="span4">
            {{ form_row(form.password) }}
        </div>
        <div class="span4">
            {{ form_row(form.username) }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="well span12 row">
            <div class="span10">
                <a href="{{ path('usuario') }}" class="btn btn-info btn-small" role="button">Volver a la lista</a>
            </div>
            <div class="span2">
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
