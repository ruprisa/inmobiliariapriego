{% extends '::base.html.twig' %}

{% block body -%}
<div class="hero-unit">
    <h3>{{ entity.username }}</h3>
</div>

<div class="row-fluid">
    <div class="span12">
        <table class="table table-hover">
        <tbody>
            <tr>
                <th>Userid</th>
                <td>{{ entity.userid }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Salt</th>
                <td>{{ entity.salt }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ entity.roles|join(' ') }}</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>

<div class="row-fluid">
    <div class="well span12 row">
        <div class="span8">
            <a href="{{ path('usuario') }}" class="btn btn-info btn-small" role="button">Volver a la lista</a>
        </div>
        <div class="span2">
            {{ form(delete_form) }}
        </div>
        <div class="span2">
            <a href="{{ path('usuario_edit', { 'id': entity.userid }) }}" class="btn btn-info btn-small" role="button">Editar</a>
        </div>
    </div>
</div>

{% endblock %}
