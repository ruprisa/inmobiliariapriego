{% extends '::base.html.twig' %}

{% block body -%}
    <div class="hero-unit">
        {% set editarusuario %}
            {{ edit_form.vars.value.username }}
        {% endset %}
        <h3>{% trans from "usuarios" %}titulo.editar %editarusuario%{% endtrans %}</h3>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="row-fluid">
        <div class="span3">
            {{ form_row(edit_form.userid, {'attr': {'readonly':'true'}}) }}
        </div>
        <div class="span3">
            {{ form_row(edit_form.password) }}
        </div>
        <div class="span3">
            {{ form_row(edit_form.username) }}
        </div>
        <div class="span3">
            {{ form_row(edit_form.active) }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="well span12 row">
            <div class="span8">
                <a href="{{ path('usuario') }}" class="btn btn-info btn-small" role="button">{% trans %}back.list{% endtrans %}</a>
            </div>
            <div class="span2">
                <!-- Si utilizo el formulario de eliminación se proeuce el error 405 Method Not Allowed -->
                {# form(delete_form) #}
                <!-- De esta forma también se queja de GET -->
                <a href="{{ path('usuario_delete', { 'id': edit_form.vars.value.userid }) }}" class="btn btn-info btn-small" role="button">{% trans %}eliminar{% endtrans %}</a>
            </div>
            <div class="span2">
                {{ form_row(edit_form.submit) }}
            </div>
        </div>
    </div>
{{ form_rest(edit_form) }}
{% endblock %}
