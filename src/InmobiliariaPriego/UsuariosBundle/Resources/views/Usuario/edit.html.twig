{% extends '::base.html.twig' %}

{% block body %}
    <div class="hero-unit">
        <h3>{{ edit_form.vars.value.username }}</h3>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="row-fluid">
        <div class="span4">
            {{ form_row(edit_form.userid) }}
        </div>
        <div class="span4">
            {{ form_row(edit_form.password) }}
        </div>
        <div class="span4">
            {{ form_row(edit_form.username) }}
        </div>
    </div>

    <div class="row-fluid">
        <div class="well span12 row">
            <div class="span8">
                <a href="{{ path('usuario') }}" class="btn btn-info btn-small" role="button">Volver a la lista</a>
            </div>
            <div class="span2">
                {{ form_end(delete_form) }}
            </div>
            <div class="span2">
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

{% endblock %}
