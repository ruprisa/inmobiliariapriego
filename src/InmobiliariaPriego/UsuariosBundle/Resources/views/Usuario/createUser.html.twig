{% extends '::base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
<div class="hero-unit">
    <h3>NUEVO USUARIO</h3>
</div>

{{ form_start(form, {'attr' : { 'userid' : 'usuario-create' }}) }}
{{ form_errors(form) }}

<div class="row-fluid">
    <div class="span4">
        {{ form_row(form.userid) }}
    </div>
    <div class="span4">
        {{ form_row(form.password) }}
    </div>
    <div class="span4">
        {{ form_row(form.username) }}
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        {{ form_row(form.guardar) }}
    </div>
</div>
    
{{ form_end(form) }}
{% endblock %}